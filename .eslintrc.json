{
  "plugins": ["prettier"],
  "extends": [
    "next",
    "next/core-web-vitals",
    "google",
    "plugin:prettier/recommended"
  ],
  "rules": {
    "semi": ["error", "always"],
    "quotes": ["warn", "double"],
    "no-var": "error",
    "no-unused-vars": "warn",
    "valid-jsdoc": "warn",
    "spaced-comment": "warn",
    "no-console": "warn",
    "no-alert": "error",
    "new-cap": "off",
    "camelcase": "off",
    "require-jsdoc": "warn",
    "object-curly-spacing": "off",
    "react-hooks/exhaustive-deps": "off",
    "@next/next/no-img-element": "off",
    "indent": ["warn", 2],
    "eol-last": ["error", "always"]
  },
  "globals": {
    "React": "readonly"
  }
}
